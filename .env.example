# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (OWASP A07:2021 - Use environment variables)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASS=your_secure_password_here
DATABASE_NAME=ecommerce

# Security Configuration
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# HTTPS Configuration (for production)
# Place your certificates in ./secrets/ directory
# - private-key.pem
# - certificate.pem

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Wompi Integration
WOMPI_BASE_URL=https://sandbox.wompi.co/v1
WOMPI_PRIVATE_KEY=your_private_key_here
WOMPI_PUBLIC_KEY=your_public_key_here
